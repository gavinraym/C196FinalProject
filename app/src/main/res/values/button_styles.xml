<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myButtonStyle" parent="@style/Widget.AppCompat.Button">
    </style>


    <style name="ObjectButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
        <item name="android:insetLeft">5dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">5dp</item>
        <item name="android:insetBottom">5dp</item>
    </style>



    <style name="DeleteButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetLeft">5dp</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetTop">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name="android:text">Delete</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:insetTop">5dp</item>
        <item name="android:insetBottom">5dp</item>
    </style>


</resources>